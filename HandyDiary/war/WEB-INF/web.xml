<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<display-name>Handy Dairy</display-name>
	<servlet>
		<servlet-name>HandyDiary</servlet-name>
		<servlet-class>com.handydiary.HandyDiaryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HandyDiary</servlet-name>
		<url-pattern>/handydiary</url-pattern>
	</servlet-mapping>
		
	<listener>
		<listener-class>com.handydiary.code.web.listener.StrutsAppEngineAdapter</listener-class>
	</listener>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
